@model IEnumerable<DAL.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Produtos</h1>

<br />
@{
    string message = (string)TempData["message"];

}
@if (message != null)
{
    <div class="alert alert-warning" role="alert">
        <strong>Erro:</strong>  @message
    </div>
}

<p>
    <a class="btn btn-info modal-href" asp-action="Create">Criar Novo</a>
</p>

<br />
<div class="d-flex justify-content-between  flex-wrap">


    @foreach (var item in Model)
    {
        <div class="card mb-2" style="width: 20em;">
            <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.UrlImagem)" alt="Card image cap">
            <div class="card-body d-flex flex-column justify-content-between">
                <h5 class="card-title"> @Html.DisplayFor(modelItem => item.Nome)</h5>
                <p class="card-text descricao"> @Html.DisplayFor(modelItem => item.Descricao)</p>
                <p class="card-text">Preço: @Html.DisplayFor(modelItem => item.Preco)</p>
                <p class="card-text">Criado Por: @Html.DisplayFor(modelItem => item.Empregado.Nome)</p>
              

                <div class="d-flex">
                    <a asp-action="Details" class="btn btn-sm btn-outline-primary modal-href" asp-route-id="@item.ProdutoId">Detalhes</a>
                    <a asp-action="Edit" class="btn btn-sm btn-outline-secondary modal-href" asp-route-id="@item.ProdutoId">Editar</a>
                    <a asp-action="Delete" class="btn btn-sm btn-outline-danger modal-href" asp-route-id="@item.ProdutoId">Apagar</a>
                </div>
               
            </div>
        </div>
    }

</div>

